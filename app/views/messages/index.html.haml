.chat
  =render 'layouts/chatside'
  .chat-main
    .chat-header.clearfix
      .chat-header--left
        %h2= @group.name
        %p.chat-header__users
          Members:
          - @group.users.each do |user|
            %span.chat-header__user
              = user.nickname

      .chat-header--right
        %a.chat-header__edit-btn{href: edit_group_path(@group)} Edit
    .chat-body
      %ul.chat-messages
        - @messages.each do |message|
          %li.chat-message
            .chat-message__header.clearfix
              %p.chat-message__name
                = message.user.nickname
              %p.chat-message__time
                = message.created_at
            %p.chat-message__body
              = message.text
              %br
              = image_tag(message.image)

    .chat-footer
      = form_for [@group, @message], remote: true, authenticity_token: true do |f|
        .chat-footer__body
          = f.text_field :text, class: 'text-field', placeholder: 'Type a message'
          %label.chat-footer__file
            = f.file_field :image
            %i.fa.fa-image
        = f.submit "Send" ,class: "submit", data: { disable_with: 'Sending...' }
